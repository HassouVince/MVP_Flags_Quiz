<resources>

    <!-- Base application theme. -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_light</item>
    </style>

    <!-- Texts theme. -->

    <style name="CustomTheme.BaseText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="CustomTheme.Title" parent="CustomTheme.BaseText">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CustomTheme.SubTitle" parent="CustomTheme.Title">
        <item name="android:textSize">@dimen/sub_title_size</item>
    </style>

    <style name="CustomTheme.MediumText" parent="CustomTheme.BaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="CustomTheme.SmallText" parent="CustomTheme.BaseText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!-- Buttons theme. -->

    <style name="CustomTheme.BaseButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>


    <style name="CustomTheme.CustomButton" parent="CustomTheme.BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/btn_main_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/btn_main_margin</item>
        <item name="android:layout_marginEnd">@dimen/btn_main_margin</item>
        <item name="android:padding">@dimen/btn_main_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTheme.DialButton" parent="CustomTheme.BaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- ProgressBar theme. -->

    <style name="CustomTheme.ProgressBar">
        <item name="android:layout_width">@dimen/progress_size</item>
        <item name="android:layout_height">@dimen/progress_size</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="CustomTheme.HorizontalProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progress">0</item>
        <item name="android:layout_marginTop">@dimen/margin_elements</item>
    </style>

    <!-- Images theme. -->

    <style name="CustomTheme.ImageLogo">
        <item name="android:layout_width">@dimen/logo_size</item>
        <item name="android:layout_height">@dimen/logo_size</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CustomTheme.SmallImage">
        <item name="android:layout_width">@dimen/small_image_size</item>
        <item name="android:layout_height">@dimen/small_image_size</item>
    </style>

    <!-- Simple horizontal view -->

    <style name="CustomTheme.HorizontalView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>
