<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_transparent"
    android:id="@+id/rootFragmentDial"
    android:visibility="visible"
        android:gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button">

        <TextView
                style="@style/CustomTheme.MediumText"
                android:id="@+id/textTitleDial"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="TITRE"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>


            <ImageView
                    android:id="@+id/imgDial"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_popup_reminder"/>


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/textDial"
                    style="@style/CustomTheme.SmallText"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:text="Alerte"
                    android:textColor="@color/colorAccent"/>

        </ScrollView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

            <Button
                    style="@style/CustomTheme.DialButton"
                    android:id="@+id/btnDial1"
                    android:text="@string/quit"
                    android:tag="btn_dial_1"/>

            <Button
                    style="@style/CustomTheme.DialButton"
                    android:id="@+id/btnDial2"
                    android:text="@android:string/ok"
                    android:visibility="gone"
                    android:tag="btn_dial_2"/>
            <Button
                    style="@style/CustomTheme.DialButton"
                    android:id="@+id/btnDial3"
                    android:text="@string/continue_"
                    android:visibility="gone"
                    android:tag="btn_dial_3"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
