<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.quizz.QuizzActivity"
        android:id="@+id/rootQuiz">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <FrameLayout android:id="@+id/layoutFragQuizPresentation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <include android:id="@+id/progress_chrono_quizz"
                layout="@layout/progress_bar_horizontal"/>

        <FrameLayout android:id="@+id/layoutFragQuizButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <FrameLayout android:id="@+id/layoutFragQuizUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

        <FrameLayout android:id="@+id/layoutFragQuizVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <FrameLayout android:id="@+id/layoutFragQuizLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <FrameLayout
            android:id="@+id/layoutFragQuizzDial"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>

    <include android:id="@+id/progressQuizz"
            layout="@layout/progress_bar"
            android:visibility="gone"/>

</RelativeLayout>