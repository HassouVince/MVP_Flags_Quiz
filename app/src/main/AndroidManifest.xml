<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.systemathic.flagsquizz">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name=".base.BaseApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/CustomTheme">
        <activity android:name="com.systemathic.flagsquizz.ui.activity.main.MainActivity"
        android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.systemathic.flagsquizz.ui.activity.form.FormActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.systemathic.flagsquizz.ui.activity.params.ParamsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.systemathic.flagsquizz.ui.activity.quizz.QuizzActivity"
                android:screenOrientation="portrait"/>

    </application>

</manifest>